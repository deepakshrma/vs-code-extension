{
	"name": "vs-code",
	"displayName": "vs-code",
	"description": "Snippets/Utils plugin for multiple languages",
	"version": "0.0.4",
	"publisher": "imdeepak",
	"author": {
		"name": "Deepak Vishwakarma>",
		"email": "deepak.m.shrma@gmail.com",
		"url": "https://github.com/deepakshrma/"
	},
	"repository": "https://github.com/deepakshrma/vs-code-extension",
	"icon": "images/icon_128x128.png",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Snippets",
		"Themes",
		"Programming Languages",
		"SCM Providers"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.set_up_all",
				"title": "BATMAN: Setup all"
			},
			{
				"command": "extension.install_extension",
				"title": "BATMAN: Install Extensions"
			}
		],
		"themes": [
			{
				"label": "xdeepakv_theme",
				"uiTheme": "vs-dark",
				"path": "./themes/xdeepakv-color-theme.json"
			}
		],
		"snippets": [
			{
				"language": "javascript",
				"path": "./snippets/snippets.json"
			},
			{
				"language": "javascriptreact",
				"path": "./snippets/snippets.json"
			},
			{
				"language": "typescript",
				"path": "./snippets/snippets.json"
			},
			{
				"language": "typescriptreact",
				"path": "./snippets/snippets.json"
			},
			{
				"language": "typescript",
				"path": "./snippets/ts-snippets.json"
			},
			{
				"language": "typescriptreact",
				"path": "./snippets/ts-snippets.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "rm -rf out/* && npm run webpack",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"package": "npx vsce package",
		"compile": "tsc -p ./ && ts-node scripts/build.ts",
		"lint:fix": "tslint -p ./ --fix",
		"lint": "tslint -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/node": "^10.14.20",
		"@types/vscode": "^1.34.0",
		"prettier": "^1.18.2",
		"ts-loader": "^6.2.0",
		"tslint": "^5.16.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.5.1",
		"webpack": "^4.41.0",
		"webpack-cli": "^3.3.9"
	},
	"bugs": {
		"url": "https://github.com/deepakshrma/vs-code-extension/issues",
		"email": "deepak.m.shrma@gmail.com"
	}
}
